{% extends 'base.html.twig' %}

{% block body %}
    <section id="pack">
        <div class="container pt-4">
            <div class="row">
                <div class="col-12">
                    <hr class="star-dark mb-5">
                    <h4 class="text-center text-secondary pb-4">{{ pack.description }}</h4>
                </div>

                <div class="col-12">
                    <div class="row">
                        {% set badgeStyles = [
                            'badge-primary',
                            'badge-secondary',
                            'badge-success',
                            'badge-danger',
                            'badge-warning',
                            'badge-info',
                            'badge-light',
                            'badge-dark'
                        ] %}

                        {% for link in pack.links %}
                            <div class="col-md-4 mt-2">
                                <div class="card text-left">
                                    {#<img class="card-img-top" src="{{ asset(listItems[random(listItems | keys)]) }}" alt="Card image cap">#}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ link.desc }}</h5>
                                        <p class="card-text">{{ link.url }}</p>

                                        <div class="tags pb-3">
                                            {% set tags = link.tags|split(',') %}
                                            {% for tag in tags %}
                                                <span class="badge {{ badgeStyles[random(badgeStyles | keys)] }}">{{ tag|trim }}</span>
                                            {% endfor %}
                                        </div>

                                        <a href="{{ link.url }}" target="_blank" class="btn btn-primary">Open Link</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}