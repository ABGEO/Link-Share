{% extends 'base.html.twig' %}

{% block body %}
    <section id="pack">
        <div class="container pt-4">
            <div class="row">
                <div class="col-12">
                    <hr class="star-dark mb-5">
                    <h4 class="text-center text-secondary pb-4">My Packs</h4>
                </div>

                {% if packs == null %}
                    <div class="col-12">
                        <h4 class="text-center text-secondary">
                            You don't have any packs.
                            <a href="{{ path('index') }}#create">Create It</a>.
                        </h4>
                    </div>
                {% else %}
                    <input type="hidden" name="token" value="{{ csrf_token('remove-pack') }}" />
                    {% for pack in packs %}
                        <div class="col-md-4 mt-2" id="pack-{{ pack.id }}">
                            <div class="card text-left pack-card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="{{ path('pack_link', {'id' : pack.uniqLink}) }}">{{ pack.uniqLink }}</a>
                                    </h5>
                                    <p class="card-text">{{ pack.description }}</p>
                                    <p class="card-text"><b>{{ pack.links|length }}</b> link in pack.</p>

                                    <a href="{{ path('pack_link', {'id' : pack.uniqLink}) }}" class="btn btn-primary">Open Pack</a>
                                    <a href="#" data-pack="{{ pack.id }}" class="btn btn-danger remove-pack">Remove</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}