{% extends 'base.html.twig' %}

{% block body %}
    <!-- Header -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container">
            <img class="img-fluid mb-5 d-block mx-auto" src="{{ asset('img/link.png') }}" alt="" width="100">
            <h3 class="font-weight-light">Welcome to</h3>
            <h1 class="text-uppercase mb-0">Link Share</h1>
            <hr class="star-light">
            <h2 class="font-weight-light mb-0">Online Link Sharing System</h2>
        </div>
    </header>

    <!-- Create Link Section -->
    <section id="create">
        <div class="container">
            <h2 class="text-center text-uppercase text-secondary pb-5">Create Your Pack</h2>

            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <h4 class="text-center text-secondary">
                    Only authorized users can create packs.
                    <a class="nav-link portfolio-item py-3 px-0 px-lg-3 rounded" onClick="showForm('signInBox')" href="#authorization-modal">Sign in</a>
                    to continue.
                </h4>
            {% else %}
                <!-- Pack Created Modal -->
                <div class="modal fade" id="packCreatedModal" tabindex="-1" role="dialog" aria-labelledby="packCreatedModalTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="packCreatedModalTitle">New Links Pack</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                <form>
                                    <p>You'r new link pack created successfully. See it in link bellow.</p>
                                    <div class="form-row align-items-center">
                                        <div class="col-md-8">
                                            <label class="sr-only" for="sharedLink">Link</label>
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">&#128279;</div>
                                                </div>
                                                <input type="text" class="form-control"
                                                       value="{{ app.request.scheme ~'://' ~ app.request.httpHost ~  path('pack_link', {'id' : 'packLinkID'}) }}"
                                                       id="sharedLink" readonly>
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-primary mb-2" id="copySharedLink">Copy</button>
                                        </div>

                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-primary mb-2" id="openSharedLink">Open</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Pack Created Modal -->

                <div class="col-lg-10 mx-auto">
                    <table id="urlsTable" class="table order-list">
                        <thead>
                        <tr>
                            <th>URL</th>
                            <th>Tags</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><label><input type="text" class="form-control" name="rowUrl"/></label></td>
                            <td><label><input type="text" class="form-control" name="rowTags"/></label></td>
                            <td><label><input type="text" class="form-control" name="rowDesc"/></label></td>
                            <td></td>
                        </tr>
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="4">
                                <input type="button" class="btn btn-primary" id="addNewRow" value="Add New URL"/>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                    <form name="shareURL" action="{{ path('create_pack') }}" method="POST">
                        <input type="hidden" name="shareToken" value="{{ csrf_token('share-links') }}"/>

                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label for="shareURLsDesc">Description</label>
                                <textarea class="form-control" id="shareURLsDesc" rows="2" placeholder="Description"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <button type="button" class="btn btn-lg btn-primary" id="shareURLs">Share URL's</button>
                        </div>
                    </form>
                </div>
            {% endif %}
        </div>
    </section>

    <!-- About Section -->
    <section class="bg-primary text-white mb-0">
        <div class="container">
            <h2 class="text-center text-uppercase text-white">About</h2>
            <hr class="star-light mb-5">
            <div class="row">
                <div class="col-lg-4 ml-auto">
                    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Mollitia neque assumenda ipsam nihil,
                        molestias magnam, recusandae quos quis inventore quisquam velit asperiores, vitae? Reprehenderit soluta,
                        eos quod consequuntur itaque. Nam.
                    </p>
                </div>
                <div class="col-lg-4 mr-auto">
                    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Mollitia neque assumenda ipsam nihil,
                        molestias magnam, recusandae quos quis inventore quisquam velit asperiores, vitae? Reprehenderit soluta,
                        eos quod consequuntur itaque. Nam.
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}